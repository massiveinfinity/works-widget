<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:works="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <view
                class="works.RotatingImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_launcher"/>

            <view
                class="works.AnimatedImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_launcher"
                works:worksAnim="@anim/rotate"/>

            <view
                class="works.AnimatedImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_launcher"
                works:worksAnim="@anim/scale"/>

        </LinearLayout>

        <view
            class="works.ConstrainedFrameLayout"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#00f"
            works:worksKeep="width"
            works:worksRatioHorizontal="16"
            works:worksRatioVertical="9">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="16:9 - keep width"
                android:textStyle="bold"/>
        </view>

        <view
            class="works.ConstrainedFrameLayout"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:background="#802000"
            works:worksKeep="height"
            works:worksRatioHorizontal="3"
            works:worksRatioVertical="2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="3:2 - keep height"
                android:textStyle="bold"/>
        </view>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <view
                class="works.ConstrainedFrameLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="#40a080"
                works:worksKeep="width"
                works:worksRatioHorizontal="1"
                works:worksRatioVertical="2">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="1:2 - keep width"
                    android:textColor="#000"
                    android:textStyle="bold"/>
            </view>

            <view
                class="works.ConstrainedFrameLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="#40a080"
                works:worksKeep="width"
                works:worksRatioHorizontal="1"
                works:worksRatioVertical="2">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="1:2 - keep width"
                    android:textColor="#000"
                    android:textStyle="bold"/>
            </view>

            <view
                class="works.ConstrainedFrameLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="#40a080"
                works:worksKeep="width"
                works:worksRatioHorizontal="1"
                works:worksRatioVertical="2">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="1:2 - keep width"
                    android:textColor="#000"
                    android:textStyle="bold"/>
            </view>

            <view
                class="works.ConstrainedFrameLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="#40a080"
                works:worksKeep="width"
                works:worksRatioHorizontal="1"
                works:worksRatioVertical="2">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="1:2 - keep width"
                    android:textColor="#000"
                    android:textStyle="bold"/>
            </view>

        </LinearLayout>

    </LinearLayout>
</ScrollView>